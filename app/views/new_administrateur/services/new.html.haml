.container
  %h1 Nouveau Service

  = form_for Service.new, html: { class: 'form' } do |f|

    = f.label :nom do
      Nom du service
      %span.mandatory *
    = f.text_field :nom, placeholder: 'nom du service', required: true

    = f.label :type_organisme do
      Type dâ€™organisme
      %span.mandatory *

    = f.select :type_organisme, Service.type_organismes.keys.map { |key| [ I18n.t("type_organisme.#{key}"), key] }

    .send-wrapper
      = f.submit "Valider", class: 'button send'
